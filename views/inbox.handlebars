<!DOCTYPE html>
<html>

  <head>
    <title>TATER TASKS</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="img/placeholders/locked.png"/>

    <!-- CSS -->
    <link href="css/default.css" rel="stylesheet">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  </head>

  <body>

  <div class="container">
      <div align="center">
        <h1>Inbox</h1>
      </div>
      <hr />
      <!-- TABS: TASKS AND CHALLENGES -->
      <ul class="nav nav-tabs" id="tabList">
          <li class="active">
              <a data-target="#home" role="tab" data-toggle="tab"><b>FRIEND REQUESTS</b></a>
          </li>
          <li>
              <a data-target="#challenge" role="tab" data-toggle="tab"><b>CHALLENGES</b></a>
          </li>
      </ul>
      <!-- CONTENT OF THE TABS -->
      <div class="tab-content">
          <div class="tab-pane fade active in" id="home">
              <div align="center" class="emptyMessage">
                  <h5>You have no pending friend requests!</h5>
              </div>
              <div class="list-frame">
                  <ul class="list-group" id="requestList" data-toggle="modal" data-backdrop="static"
                      data-target="#messageModal">
                      {{#each messages}}
                          {{#unless challenge}}
                              <a title="{{body}}" onclick="openMail(this)" href="#">
                                  <li class="list-group-item" id="message{{id}}">{{subject}}
                                      <br />
                                      <div align="right">{{date}}</div>
                                  </li>
                              </a>
                          {{/unless}}
                      {{/each}}
                  </ul>
              </div>
          </div>

          <div class="tab-pane fade" id="challenge">
              <div align="center" class="emptyMessage">
                  <h5>You have no challenge invitations!</h5>
              </div>
              <div class="list-frame">
                  <ul class="list-group" id="challengelist" data-toggle="modal" data-backdrop="static"
                      data-target="#messageModal">
                      {{#each messages}}
                          {{#if challenge}}
                              <a title="{{body}}" onclick="openMail(this)" href="#">
                                  <li class="list-group-item" id="message{{id}}">{{subject}}
                                      <br />
                                      <div align="right">{{date}}</div>
                                  </li>
                              </a>
                          {{/if}}
                      {{/each}}

                  </ul>
              </div>
          </div>
      </div>


    <!-- BODY CODE -->
    <div id="messageModal" class="modal fade" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <!-- MODAL HEADER -->
              <div class="modal-header">
                <button type="button" class="close" onclick="cancelMail()" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Message</h4>
              </div>
              <!-- MODAL BODY: FORM -->
              <div class="modal-body">
                <div id="edit" role="form">
                  <!-- TASK NAME -->
                  <p id="message">I am a banana.</p>
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="delete">Delete Message</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancel">Cancel</button>
              </div>
          </div>
    </div>
  </div>
      </div>

      <!-- START NAVIGATION: FOOTER -->
      <div id="footer">
          <div class="navbar navbar-default col-xs-12 navbar-fixed-bottom">
              <div class="row" id="bottomNav">
                  <div class="col-xs-3 text-center"><a href="/home"><i class="glyphicon glyphicon-home"></i><br>Home</a></div>
                  <div class="col-xs-3 text-center"><a href="/friends"><i class="glyphicon
          glyphicon-th-list"></i><br>Friends</a></div>
                  <div class="col-xs-3 text-center"><a href="/myprofile"><i class="glyphicon
          glyphicon-user"></i><br>Profile</a></div>
                  <div class="col-xs-3 text-center"><a href="/inbox"><i class="glyphicon
          glyphicon-envelope"></i><br>Inbox</a></div>
              </div>
          </div>
      </div>
      <!-- END NAVIGATION: FOOTER -->
    <!-- END BODY CODE -->

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="js/inbox.js"></script>

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  </body>
</html>